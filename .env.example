# Redis Configuration
# These environment variables override settings in config.json

# Enable or disable Redis storage (true/false)
REDIS_ENABLED=false

# Redis server hostname
REDIS_HOST=localhost

# Redis server port
REDIS_PORT=6379

# Redis password (optional, leave empty if not required)
REDIS_PASSWORD=

# Redis username (optional, for Redis 6+ ACL)
REDIS_USERNAME=

# Redis database number (0-15)
REDIS_DATABASE=0

# Unique session name for this conversation
REDIS_SESSION_NAME=default-session

# Time-to-live in seconds (optional, leave empty for no expiration)
# Example: 3600 for 1 hour, 86400 for 1 day
REDIS_TTL=3600

# Web Streaming Configuration
# Stream conversation output to a web application via Redis pub/sub

# Enable or disable web streaming (true/false)
WEB_STREAM_ENABLED=false

# Redis pub/sub channel name
WEB_STREAM_REDIS_CHANNEL=ai-chat:stream

# Redis server for web streaming (optional, defaults to REDIS_HOST)
WEB_STREAM_REDIS_HOST=localhost

# Redis port for web streaming (optional, defaults to REDIS_PORT)
WEB_STREAM_REDIS_PORT=6379

# Redis password for web streaming (optional, defaults to REDIS_PASSWORD)
WEB_STREAM_REDIS_PASSWORD=
